# Act Environment Variables for Local Testing
# These variables are loaded automatically by act when running workflows

# Node.js and Python versions to match CI
NODE_VERSION=18.x
PYTHON_VERSION=3.11

# Local test environment settings
TEST_ENVIRONMENT=act_local
PYTHONPATH=/github/workspace
CI=true
GITHUB_ACTIONS=true

# Act-specific environment variables
ACT=true

# Coverage and quality thresholds
TEST_COVERAGE_THRESHOLD=95
QUALITY_GATE_THRESHOLD=95

# Local database settings (when using host networking)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_knowledge_test

# Test data and mock settings
TEST_MOCK_EXTERNAL_APIS=false
TEST_USE_REAL_SERVICES=true
TEST_TIMEOUT=300

# Build and deployment settings
BUILD_ENV=test
DEPLOYMENT_ENV=local

# Security scanning configuration
ENABLE_SECURITY_SCANS=true
SECURITY_SCAN_SEVERITY=high
BANDIT_SEVERITY=high
SEMGREP_CONFIG=auto

# Performance testing
PERFORMANCE_TEST_ENABLED=true
LIGHTHOUSE_CI_ENABLED=true

# Artifact and cache settings
ARTIFACT_RETENTION_DAYS=7
CACHE_ENABLED=true

# Docker settings for act
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Local service ports (to avoid conflicts)
LOCAL_POSTGRES_PORT=5433
LOCAL_REDIS_PORT=6380
LOCAL_SELENIUM_PORT=4445