# Pipeline Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_knowledge
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here_min_12_chars

# API Keys (Optional - for enrichment features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Scraping Configuration
USER_AGENT=AI-Knowledge-Bot/1.0
REQUEST_DELAY=1.0
RESPECT_ROBOTS_TXT=true

# Pipeline Settings
BATCH_SIZE=50
MAX_WORKERS=4
ENABLE_MONITORING=false

# Publishing Configuration
OUTPUT_DIRECTORY=apps/site/src/content
VALIDATE_FRONTMATTER=true

# Security Settings
ENABLE_INPUT_VALIDATION=true
MAX_URL_LENGTH=2048
MAX_HTML_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json